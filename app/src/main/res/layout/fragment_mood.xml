<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".fragments.MoodFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonThumbDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:alpha=".54"
            android:background="@null"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_baseline_thumb_down_24px" />

        <ImageButton
            android:id="@+id/imageButtonThumbUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:alpha=".54"
            android:background="@null"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_baseline_thumb_up_24px"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</FrameLayout>