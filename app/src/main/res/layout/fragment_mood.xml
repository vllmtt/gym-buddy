<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".fragments.MoodFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonVeryDissatisfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:alpha=".54"
            android:background="@null"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_outline_sentiment_very_dissatisfied_24px" />

        <ImageButton
            android:id="@+id/imageButtonDissatisfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:alpha=".54"
            android:background="@null"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_outline_sentiment_dissatisfied_24px" />

        <ImageButton
            android:id="@+id/imageButtonSatisfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:alpha=".54"
            android:background="@null"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_outline_sentiment_satisfied_24px" />

        <ImageButton
            android:id="@+id/imageButtonVerySatisfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:alpha=".54"
            android:background="@null"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_outline_sentiment_very_satisfied_24px" />
    </LinearLayout>

</FrameLayout>