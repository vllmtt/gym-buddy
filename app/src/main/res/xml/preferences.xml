<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Units"
        android:key="pref_key_unit_settings">

        <ListPreference
            android:key="@string/pref_weight_unit_key"
            android:title="@string/weight"
            android:dialogTitle="@string/weight"
            android:entries="@array/weight_unit_keys"
            android:entryValues="@array/weight_units"
            android:defaultValue="@string/weight_unit_kilograms"/>

        <ListPreference
            android:key="@string/pref_distance_unit_key"
            android:title="@string/distance"
            android:dialogTitle="@string/distance"
            android:entries="@array/distance_unit_keys"
            android:entryValues="@array/distance_units"
            android:defaultValue="@string/distance_unit_kilometers"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Exercises"
        android:key="pref_key_exercise_settings">

        <Preference android:title="@string/edit_strength_exercises"
            android:key="@string/key_edit_strength_exercises"/>

        <Preference android:title="@string/key_edit_cardio_exercises"
            android:key="@string/edit_cardio_exercises"/>

    </PreferenceCategory>

</PreferenceScreen>