<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/imageButtonVeryDissatisfied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:alpha=".54"
        android:background="@null"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_outline_sentiment_very_dissatisfied_24px" />

    <ImageButton
        android:id="@+id/imageButtonDissatisfied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:alpha=".54"
        android:background="@null"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_outline_sentiment_dissatisfied_24px" />

    <ImageButton
        android:id="@+id/imageButtonSatisfied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:alpha=".54"
        android:background="@null"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_outline_sentiment_satisfied_24px" />

    <ImageButton
        android:id="@+id/imageButtonVerySatisfied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:alpha=".54"
        android:background="@null"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_outline_sentiment_very_satisfied_24px" />
</LinearLayout>